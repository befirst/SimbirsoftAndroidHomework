<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.no_fate.simbirsoftandroidhomework">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Honey">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".TheSecondHomeWork"
            android:label="@string/second_n_third_homework"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".TheThirdHomeWork"
            android:label="@string/second_n_third_homework"
            android:parentActivityName=".TheSecondHomeWork"/>
        <activity
            android:name=".TheFourthHomeWork"
            android:label="@string/fourth_homework"
            android:parentActivityName=".MainActivity"/>

    </application>

</manifest>