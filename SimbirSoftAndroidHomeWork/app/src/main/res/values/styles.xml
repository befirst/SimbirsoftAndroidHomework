<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Honey" parent="AppTheme" >
        <item name="colorPrimary">@color/colorMain</item>
        <item name="colorPrimaryDark">@color/colorHead</item>
        <item name="android:colorBackground">@color/colorBackground</item>
    </style>

    <style name="Mint" parent="Honey" >
        <item name="colorPrimary">@color/colorMintMain</item>
        <item name="colorPrimaryDark">@color/colorMintHead</item>
        <item name="android:colorBackground">@android:color/background_light</item>
        <item name="colorAccent">@color/colorMintMain</item>
    </style>
</resources>
